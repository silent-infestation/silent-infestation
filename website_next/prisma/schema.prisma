generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------
// --------User------------
// ------------------------

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password_crypté String
  login           String
  firstname       String
  lastname        String
  phone           String?
  disable         Boolean   @default(false)
  chgpwd          Boolean   @default(false)
  last_connexion  DateTime?
  last_chgpwd     DateTime?
  date_inscription DateTime @default(now())

  sites           Site[]
  scans           Scan[]
  analyses        Analyse[]
}

// ------------------------
// ---------Site-----------
// ------------------------
model Site {
  id          Int    @id @default(autoincrement())
  url_site    String
  userId      Int

  user        User   @relation(fields: [userId], references: [id])

  @@unique([userId, url_site]) 
}

// ------------------------
// ---------Scan-----------
// ------------------------
model Scan {
  id          Int      @id @default(autoincrement())
  userId      Int
  url_scanné  String
  date_scan   DateTime @default(now())
  statut      String

  user        User     @relation(fields: [userId], references: [id])
  analyse     Analyse?

  @@index([userId])
}

// ------------------------
// -------Analyse----------
// ------------------------
model Analyse {
  id           Int      @id @default(autoincrement())
  scanId       Int      @unique
  userId       Int
  date_analyse DateTime @default(now())
  resultats    String

  scan         Scan     @relation(fields: [scanId], references: [id])
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

